{
  "name": "@awmarquis/jest-html-reporter",
  "version": "1.1.0",
  "description": "A beautiful Jest HTML reporter with Bootstrap styling, 6 built-in themes, and extensive customization options",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "require": "./dist/types.js",
      "default": "./dist/types.js"
    }
  },
  "keywords": [
    "jest",
    "reporter",
    "html"
  ],
  "author": "Alexander Marquis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexwmarquis/jest-html-reporter.git"
  },
  "homepage": "https://github.com/alexwmarquis/jest-html-reporter#readme",
  "bugs": {
    "url": "https://github.com/alexwmarquis/jest-html-reporter/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "jest": ">=26.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@jest/reporters": "^30.2.0",
    "@jest/test-result": "^30.2.0",
    "@playwright/test": "^1.57.0",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-plugin-playwright": "^2.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "npm-check-updates": "^19.2.1",
    "prettier": "^3.7.4",
    "sass": "^1.97.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "scripts": {
    "update": "npx npm-check-updates -u",
    "build": "node scripts/build.js",
    "dev": "node scripts/dev.js",
    "watch": "npx tsc --watch",
    "prepublishOnly": "npm run build && npm run test",
    "format": "npx prettier --check .",
    "format:fix": "npx prettier --write .",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix .",
    "test:unit": "npm run build && npx jest --config jest.config.js",
    "test:coverage": "npm run build && npx jest --config jest.config.js --coverage",
    "test:integration": "npm run test:unit && npx playwright test",
    "test": "npm run test:integration",
    "clean": "rm -rf dist",
    "prepack": "npm run build",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "precommit": "npm run build && npm run format && npm run lint && npm run typecheck && npm run test"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
