{
  "name": "@awmarquis/jest-html-reporter",
  "version": "1.0.4",
  "description": "A beautiful Jest HTML reporter with Bootstrap styling, 6 built-in themes, and extensive customization options",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "require": "./dist/types.js",
      "default": "./dist/types.js"
    }
  },
  "keywords": [
    "jest",
    "reporter",
    "html"
  ],
  "author": "Alexander Marquis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexwmarquis/jest-html-reporter.git"
  },
  "homepage": "https://github.com/alexwmarquis/jest-html-reporter#readme",
  "bugs": {
    "url": "https://github.com/alexwmarquis/jest-html-reporter/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "jest": ">=26.0.0"
  },
  "devDependencies": {
    "@jest/reporters": "^29.7.0",
    "@jest/test-result": "^30.2.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.10.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "sass": "^1.69.5",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node scripts/dev.js",
    "watch": "npx tsc --watch",
    "prepublishOnly": "npm run build && npm run test",
    "format": "npx prettier --check .",
    "format:fix": "npx prettier --write .",
    "test:unit": "npm run build && npx jest --config jest.config.js",
    "test:integration": "npm run build && npx playwright test",
    "test": "npm run test:unit && npm run test:integration",
    "clean": "rm -rf dist",
    "prepack": "npm run build",
    "prepare": "husky",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
